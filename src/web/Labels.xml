<Panel>
	<Grid rows="3" columns="4"/>
	<Background color="#222"/>
	<Templates>
		<Control name="default">
			<Label color="#eee"/>
		</Control>
		<Button name="default">
			<Background color="#333"/>
			<Active>
				<Background color="#444"/>
			</Active>
		</Button>
		<Slider name="default">
			<Thumb>
				<Background color="#ccc"/>
			</Thumb>
			<Track>
				<Background color="#333"/>
			</Track>
		</Slider>
	</Templates>
	<Controls>
		<Button height="2">
			<Position x="1" y="1"/>
			<Label text="Button 1"/>
		</Button>
		<Button heightw="80px">
			<Position x="2" y="1"/>
			<Padding x="40px" y="40px"/>
			<Label text="Button 2" icon="globe" text-anchor="container" text-position="top" icon-position="right"/>
		</Button>
		<Button>
			<Position x="2" y="2"/>
			<Label text="Button 3" icon="bars" text-position="bottom"/>
		</Button>
		<Button width="2">
			<Position x="1" y="3"/>
			<Label text="Button 4"/>
		</Button>
		<Button circle="true">
			<Position x="3" y="1"/>
			<Label icon="thermometer-three-quarters"/>
		</Button>
		<Button circle="true" heightw="100px">
			<Position x="4" y="1"/>
			<Label text="Button 6" text-anchor="container" text-position="bottom"/>
		</Button>
		<Button square="true">
			<Position x="3" y="2"/>
			<Label text="Button 7"/>
		</Button>
		<Button square="true">
			<Position x="4" y="2"/>
			<Label text="Button 8"/>
		</Button>
		<Slider width="2">
			<Position x="3" y="3"/>
			<Label text="Slider 1" text-anchor="container" text-position="top left"/>
		</Slider>
	</Controls>
</Panel>
