			<Position x="1" y="3"/>
			<Label text="Button 4"/>
		</Button>
		<Button circle="true">
			<Position x="3" y="1"/>
			<Label text="Button 5"/>
		</Button>
		<Button circle="true">
			<Position x="4" y="1"/>
			<Label text="Button 6"/>
		</Button>
		<Button square="true">
			<Position x="3" y="2"/>
			<Label text="Button 7"/>
		</Button>
		<Button square="true">
			<Position x="4" y="2"/>
			<Label text="Button 8"/>
		</Button>
