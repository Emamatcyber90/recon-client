<Panel>
	<Background color="#333"/>
	<Grid rows="5" columns="7"/>
	<Templates>
		<Control name="default">
			<Label font="Calibri" size="28px" color="#ccc"/>
			<Background color="#444"/>
			<Padding x="10px" y="10px"/>
			<Border radius="8px" width="2px" color="#ffc000"/>
			<Active>
				<Text color="white"/>
				<Background color="#404040"/>
				<Border radius="8px" width="2px" color="white"/>
			</Active>
		</Control>
	</Templates>
	<Controls>
		<Button height="2">
			<Position x="1" y="1"/>
		</Button>
		<Button width="2" mode="toggle">
			<Label text="Cargo scoop"/>
			<Position x="2" y="1"/>
			<Action type="joy" btn="2"/>
			<Active>
				<Text color="white"/>
				<Background color="#404040"/>
				<Border radius="8px" width="2px" color="white"/>
			</Active>
		</Button>
		<Button>
			<Action type="joy" btn="4"/>
			<Label icon="globe"/>
			<Position x="3" y="2"/>
			<Active>
				<Text color="white"/>
				<Background color="#404040"/>
				<Border radius="8px" width="2px" color="white"/>
			</Active>
		</Button>
		<Button square="true">
			<Label text="FSD"/>
			<Position x="3" y="4"/>
			<Action type="joy" btn="1"/>
		</Button>
		<Button circle="true">
			<Label text="FSD"/>
			<Position x="3" y="3"/>
			<Action type="key" key="J"/>
		</Button>
		<Button mode="toggle" circle="true">
			<Action type="joy" btn="3"/>
			<Position x="1" y="4"/>
			<Border style="none"/>
			<Background color="#600"/>
			<Shadows>
				<Shadow offsetX="0" offsetY="-1px" blurRadius="7px" spreadRadius="1px" color="black" alpha="0.2"/>
				<Shadow offsetX="0" offsetY="-1px" blurRadius="9px" color="#441313" inset="true"/>
				<Shadow offsetX="0" offsetY="0" blurRadius="0" color="#f00" alpha="0.5"/>
				<Shadow offsetX="0" offsetY="0" blurRadius="0" spreadRadius="6px" color="#222"/>
			</Shadows>
			<Active>
				<Background color="#f11"/>
				<Shadows>
					<Shadow offsetX="0" offsetY="-1px" blurRadius="7px" spreadRadius="1px" color="black" alpha="0.2"/>
					<Shadow offsetX="0" offsetY="-1px" blurRadius="9px" color="#441313" inset="true"/>
					<Shadow offsetX="0" offsetY="0" blurRadius="12px" color="#f00" alpha="0.5"/>
					<Shadow offsetX="0" offsetY="0" blurRadius="0" spreadRadius="6px" color="#222"/>
				</Shadows>
			</Active>
		</Button>
		<Button circle="true">
			<Position x="2" y="4"/>
			<Border style="none"/>
			<Background color="#646464">
				<Gradient type="radial" position="top">
					<Point color="#616161" stop="0%"/>
					<Point color="#616161" stop="20%"/>
					<Point color="#535353" stop="60%"/>
				</Gradient>
			</Background>
			<Shadows>
				<Shadow offsetX="0" offsetY="0" blurRadius="4px" color="#1C1C17"/>
			</Shadows>
			<Active>
				<Background color="#ff4f4f"/>
				<Shadows>
					<Shadow offsetX="0" offsetY="0" blurRadius="20px" color="#1C1C17"/>
					<Shadow offsetX="0" offsetY="0" blurRadius="25px" color="#FF4242"/>
				</Shadows>
			</Active>
		</Button>
		<Slider width="2">
			<Position x="5" y="4"/>
			<Label text="Sensor zoom" text-anchor="container" position="top left"/>
			<Value unit="%" position="bottom right"/>
			<Action axis="1"/>
			<Track height="28px">
				<Background color="#222"/>
				<Border radius="2px" width="1px" color="#010101"/>
				<Shadows>
					<Shadow offsetX="1px" offsetY="1px" blurRadius="1px" color="#000000"/>
					<Shadow offsetX="0" offsetY="0" blurRadius="1px" color="#0d0d0d"/>
				</Shadows>
			</Track>
			<Thumb width="36px" height="36px">
				<Background color="#ffc000"/>
				<Border radius="3px" width="1px" color="black"/>
				<Shadows>
					<Shadow offsetX="1px" offsetY="1px" blurRadius="1px" color="#000000"/>
					<Shadow offsetX="0" offsetY="0" blurRadius="1px" color="#0d0d0d"/>
				</Shadows>
			</Thumb>
		</Slider>
	</Controls>
</Panel>
